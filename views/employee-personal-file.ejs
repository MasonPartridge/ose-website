<div>
    <div class="flex flex-row justify-between">
        <h1>
            <%= `Dr. ${employee.first_name} ${employee.family_name}` %>
        </h1>
        <a 
            href="/employee-database/edit-form/<%= employee._id %>"
            class="text-blue-700">Edit</a>
    </div>
    <hr class="border-t-4 border-red-700">
    <p><strong>Employee Self Identification: </strong>
        <%= `Dr. ${employee.first_name} ${employee.family_name}` %>
    </p>
    <p><strong>Employee ID#: </strong>
        <%= `${employee._id}` %>
    </p>
    <p><strong>Clearance Level: </strong>
        <%= `${employee.clearance_level}` %>
    </p>
    <p><strong>Date of Death: </strong>
        <%= `${employee.date_of_death}` %>
    </p>
    <p><strong>Date of Birth: </strong>
        <%= `${employee.date_of_birth}` %>
    </p>
</div>